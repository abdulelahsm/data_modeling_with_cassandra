    "    for line in csvreader:\n",
    "        query = \"INSERT INTO username_retrieve (song, userId, firstName, lastName)\"\n",
    "        query = query + \" VALUES (%s, %s, %s, %s)\"\n",
    "        session.execute(query, (line[9], int(line[10]), line[1], line[4]))                    "
